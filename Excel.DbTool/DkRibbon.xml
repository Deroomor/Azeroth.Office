<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="onLoad" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab id="tb01" label="我的数据库">
                <group id="grp01" label="数据源">
                    <button id="btnSetDbConnection" label="设置&#xD;&#xA;" size="large" />
                    <dropDown tag="getItemCount:DbCount;getItemID:DbName;
                                   getItemLabel:DbName;onActiondropDown:ChangeDB"
                              id="Setting-01"
                              getItemCount="getItemCount" 
                              getItemID="getItemID" 
                              getItemLabel="getItemLabel" 
                               onAction="onActiondropDown"
                              showImage="false"  />
                    <dropDown id="drpTableList" showImage="false" />
                </group>
                <group id="grp02" label="操作">
                  <button tag="onAction:Show" label="表的&#xD;&#xA;结构" size="large" onAction="onAction" id="TableMeta-001"  />
                  <button id="btnChangeTableMeta" label="保存&#xD;&#xA;结构" size="large" />
                    <dropDown id="drpPageSize" showImage="false" />
                    <buttonGroup id="btnGrp01">
                        <button id="btnLastPage" label="上一页" showImage="false" />
                        <button id="btnNextPage" label="下一页" showImage="false" />
                    </buttonGroup>
                </group>
                <group id="grp03" label="数据表" />
            </tab>
        </tabs>
    </ribbon>
</customUI>